<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Image Asset -->
    <ImageView
    android:id="@+id/imageView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/splash_screen_image"
    android:contentDescription="Splash Screen Image"/>


    <!-- Description Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This application is intended for school students, educators, and teachers looking to enhance mental well-being in educational settings."
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageView" 
        android:layout_marginTop="24dp" 
        android:layout_marginLeft="40dp" 
        android:layout_marginRight="40dp" />
        
</RelativeLayout>
